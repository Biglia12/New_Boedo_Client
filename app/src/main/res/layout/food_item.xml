<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    app:cardElevation="10dp"
    android:layout_marginBottom="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/comida_image"
            android:scaleType="centerCrop"
            android:src="@drawable/panaderia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7A0E0D0E">

        <TextView
            android:id="@+id/comida_name"
            android:text="Nombre de Comida"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content" />

        <!--<ImageView
            android:id="@+id/quick_cart"
            android:layout_marginRight="30dp"
            android:background="@drawable/ic_shopping_cart_black_24dp"
            android:layout_weight="1"
            android:tint="@android:color/holo_red_dark"
            android:backgroundTint="@color/fbutton_color_alizarin"
            android:layout_width="0dp"
            android:layout_height="wrap_content" /> -->


        </LinearLayout>
    </RelativeLayout>




</androidx.cardview.widget.CardView>