        app:layout_constraintEnd_toStartOf="@+id/imageAviso"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imagenubica"
        app:layout_constraintTop_toBottomOf="@+id/textViewface"
