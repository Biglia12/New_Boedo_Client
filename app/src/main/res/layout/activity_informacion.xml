        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textViewface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Nuestro Facebook"
        app:layout_constraintEnd_toEndOf="@+id/imagenface"
        app:layout_constraintStart_toStartOf="@+id/imagenface"
        app:layout_constraintTop_toBottomOf="@+id/imagenface" />

    <ImageView
        android:id="@+id/imagenubica"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_location_on_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewcontac" />

    <TextView
        android:id="@+id/textViewubicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
