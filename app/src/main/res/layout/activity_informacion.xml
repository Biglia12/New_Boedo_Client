    <ImageView
        android:id="@+id/imagenContacto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_phone_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textViewcontac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Contacto"
        app:layout_constraintEnd_toEndOf="@+id/imagenContacto"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintStart_toStartOf="@+id/imagenContacto"
        app:layout_constraintTop_toBottomOf="@+id/imagenContacto" />

    <ImageView
        android:id="@+id/imageemail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_email_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textViewemali"
        android:layout_width="105dp"
        android:layout_height="16dp"
        android:text="Nuestro Email"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/imageemail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageemail"
        app:layout_constraintTop_toBottomOf="@+id/imageemail" />

    <ImageView
