    <TextView
        android:id="@+id/textViewhora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Nuestro Horario"
        app:layout_constraintEnd_toEndOf="@+id/imgHora"
        app:layout_constraintStart_toStartOf="@+id/imgHora"
        app:layout_constraintTop_toBottomOf="@+id/imgHora" />

    <TextView
        android:id="@+id/textViewAviso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Antes de comprar"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/imageAviso"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/imageAviso"
        app:layout_constraintTop_toBottomOf="@+id/imageAviso" />

    <ImageView
        android:id="@+id/imageAviso"
        android:layout_width="87dp"
        android:layout_height="98dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewemali"
        app:srcCompat="@drawable/ic_warning_black_24dp" />


